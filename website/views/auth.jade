extends base

block content
  .container
    .jumbotron
      h1 Login to see the project.
    .row
      .col-md-offset-4.col-md-4
        if registered
          .alert.alert-success
            | You&apos;r account was authorized!  Now login with your
            | chosen credentials.
        if fail
          .alert.alert-danger
            | The login process failed. Maybe you provided the wrong credentials?
        form.form-horizontal(method='POST' action='#{req.baseUrl}/auth')
          .form-group
            label.col-sm-3.control-label(for='email') Email
            .col-sm-9
              input.form-control(type='email' name='email' placeholder='Email')
          .form-group
            label.col-sm-3.control-label(for='password') Password
            .col-sm-9
              input.form-control(type='password' name='password' placeholder='Password')
          .form-group
            .col-sm-offset-3.col-sm-9
              button.btn.btn-primary(type='submit') Sign up
